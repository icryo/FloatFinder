{
  "name": "SP Filter Extension",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Removes item-cards above a certain SP threshold.",
  "icons": {
    "48": "icon48.png",
  },

  
  "permissions": [
    "storage",   
    "activeTab",
    "scripting"  
  ],


  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://csfloat.com/*"],
      "js": ["contentScript.js"]
    }
  ]
}
